.container-edit {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.button-hover{background: #c33}
.container-edit .mainWrapper {
  flex: 1;
  width: 100%;
  background: #eee;
  overflow: auto;
}

.container-edit .bottomBtu {
  width: 100%;
  height: 100rpx;
}

.container-edit .bottomBtu button {
  width: 100%;
  height: 100%;
  background: #c00;
  border-radius: 0;
  line-height: 100rpx;
  color: #fff;
}

.menuItem {
  padding: 15rpx;
  margin: 15rpx;
  border-bottom: solid 1px #ddd
}

.menuItem input {
  width: 100%;
  height: 80rpx;
  display: inline-block;
  border: solid 1rpx #999;
  vertical-align: middle;
  background: #fff;
  text-align: left;
  padding-left: 0.2rem;
  margin:20rpx auto;
  border-radius: 20rpx;
  box-shadow:2rpx 2rpx 2rpx #999
}
.menuItem .uploader-text{
  margin:20rpx auto;
  border:solid 1px #ccc;
  display: inline-block;
  padding: 10rpx 20rpx;
  background: #ddd;
  box-shadow:2rpx 2rpx 2rpx #999;
  border-radius: 20rpx
}
.menuItem .contenteditableView{
  margin:20rpx auto;
  border:solid 1px #ccc;
  display: inline-block;
  padding: 10rpx 20rpx;
  background: #fff;
  box-shadow:2rpx 2rpx 2rpx #999;
  border-radius: 20rpx;
  width: 95%;
  height: 500rpx;
}
.menuItem .uploader-text:active{
  background: #ccc
}
.menuItem textarea {
  width: 100%;
  display: inline-block;
  border:solid 1rpx #999;
  vertical-align: middle;
  background: #fff;
  text-align: left;
  padding-left: 0.2rem;
  box-shadow:2rpx 2rpx 2rpx #999;
  border-radius: 20rpx
}
.uploader-image{width: 100%}